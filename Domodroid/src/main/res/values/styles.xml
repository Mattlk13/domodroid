<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        <item name="android:panelBackground">@android:color/white</item>
        -->
        <item name="android:windowFullscreen">true</item>
        <item name="actionBarStyle">@style/ActionBarLogo</item>
    </style>

    <style name="ActionBarLogo" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="logo">@drawable/app_name1</item>
        <item name="background">@drawable/background</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- AppWidgets style. -->
    <style name="Widget">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Widget.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="splashTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

</resources>